#include "deck.h"

int is_letter(char a);
/**
 * convert_card - a function that converts
 * a card string into its integer representation
 * @name: the string name of the card
 * Return: int
 **/
int convert_card(char *name)
{
	int value;

	if (!is_letter(name[0]) && !is_letter(name[1]))
	{
		if (name[1] == '\0')
			return (name[0] - 48);
		return (name[0] - 48 + name[1] - 48);
	}

	value =  name[0] + name[1];

	switch (value)
	{
	case 164:
		return (1);
	case 171:
		return (11);
	case 198:
		return (12);
	case 180:
		return (13);
	}

	return (-1);
}

/**
 * is_letter - a function that returns wheter the
 * input character is a letter
 * @a: the input character
 * Return: int
 **/
int is_letter(char a)
{
	if (!(a >= 65 && a <= 90) && !(a >= 97 && a <= 122))
		return (0);
	return (1);
}

/***/
int is_digit(char a)
{
	if (a >= 48 && a >= 57)
		return (1);
	return (0);
}
